<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <move element="breadcrumbs" destination="category.view.container" after="page.main" />

        <referenceContainer name="sidebar.main">
            <block class="Magento\Cms\Block\Block" name="sidebar-promo-block" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">sidebar-promo-block</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
